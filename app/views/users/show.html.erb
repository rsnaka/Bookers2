<h2>User info</h2>

  <%= image_tag @user.get_profile_image(150,150) %>

<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <table class="table table-striped">
        <thead>
          <tr>
            <th class=header>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th class=header>Introduction</th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>
<div class="row">
  <%= link_to edit_user_path, class: "btn btn-outline-secondary btn-block" do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div>
<h2>New book</h2>

<%= form_with model: Book.new do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>

  <p><%= f.submit 'Create Book'%></p>

<% end %>

<h2>Books</h2>

<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <table class="table table-striped">
        <thead>
          <tr>
            <th class=header>Title</th>
            <th class=header>Opinion</th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>