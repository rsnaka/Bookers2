<%= f.file_field :image, accept: "image/*" %>

<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <table class="table table-striped">
        <thead>
          <tr>
            <th class=header>name</th>
          </tr>
          <tr>
            <th class=header>Introduction</th>
          </tr>
