
 <div class="container px-5 px-sm-0">
  <div class="row">
    <div class=col-md-3>
      <h2>User info</h2>
      <% user = User.first %>
      <% if user.image.attached? %>
        <%= image_tag user.image, size: "150x150" %>
      <% else %>
        <%= image_tag 'no_image', size: "150x150" %>
      <% end %>
        <table class="table">
          <tbody>
            <tr></th>
              <th>name</th>
              <th>risa</th>
            </tr>
            <tr>
              <th>introduction</th>
              <th></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <div class="btn btn-outline-secondary btn-block">
            <i class="fa-solid fa-user-gear"></i>
          </div>
        </div>
        <h2 class="mt-3">New book</h2>
          <form action="/books" accept-charset="UTF=8" method="post">
            <div class="form-group">
              <label for="book_title">Title</label>
              <input class="form-control book_title" type="text" name="book[body]" id=""book_tilte>
            </div>
