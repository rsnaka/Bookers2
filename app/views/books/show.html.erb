<div class="mt-5 container">
  <div class="row">
    <%= render 'list', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
  	<h2>Book detail</h2>
    	<table class="table">
    	  <tbody>
    	    <tr>
    	      <td>
    	        <%= link_to user_path(@user.id) do %>
    	          <%= image_tag @user.profile_image, size: "150x150" %><br>
    	          <%= @user.name %>
    	        <% end %>
    	      </td>
            <td>
              <%=link_to book_path(@book.id) do %>
                <%= @book.title  %>
              <% end %>
            </td>
  
            <td><%= @book.body %></td>
  
            <td><%= link_to edit_book_path(@book.id), class: "btn btn-success" do %>
                  Edit
                <% end %>
            </td>
  
            <td><%= link_to book_path(@book.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" do %>
                  Destroy
                <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>